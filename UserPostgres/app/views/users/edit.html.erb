
<h1>Create New User</h1>
<% if flash[:notice] %>
  <% flash[:notice].each do |note| %>
    <p id="notice"><%= note %></p>  
  <% end %>
<% end %>
<form action = "/users/<%= @user.id %>/update" method = "post">
  <input type = 'hidden' name = "authenticity_token" value = "<%=form_authenticity_token%>">
  <label>Name</label>
  <input type = "text" name = "name" id = "user_name" value = "<%=@user.name%>">
    <label>Email</label>
  <input type = "text" name = "email" id = "user_email" value = "<%=@user.email%>">

  <input type = "submit" value = "Update" id = "update">
</form>

<form action = "/users/<%= @user.id %>/destroyer" method ="post">
	  <input type = 'hidden' name = "authenticity_token" value = "<%=form_authenticity_token%>">
 <input type = "submit" value = "Delete Account" id = "delete">
	</form>

