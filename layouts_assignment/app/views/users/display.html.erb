

<% content_for :left_column do %>
<!-- <div class = "new_div"> -->
<h1>All Users</h1>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Favorite Language</th>
     
   
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.favorite_language %></td>
      
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Home', root_path %> 
<%= link_to 'Add Student', "/dojos/" + @dojoschool.to_s + "/students/new" %>
<% end %>

<% content_for :right_column do %>

<!-- <div class = "new_div"> -->
<h1>New User</h1>




<form action= '/user/create' method= "post">
  <p><input type="hidden" name="authenticity_token" value = "<%= form_authenticity_token %>"></p>
  <p><label class = "new_label">First Name: </label></p>
    <p><input class = "new_input" type="text" name="first_name"/></p>
    <p><label class = "new_label">Last_name: </label></p>
      <p><input class = "new_input" type="text" name="last_name"/></p>
    <p><label class = "new_label">Favorite Language: </label></p>
      <p> <input class = "new_input" type="text" name="favorite_language"/></p>


  
    <p><input type="submit" value="Submit"></p>
</form>
  <a href= "" ><button>All Posts</button></a>
<!-- </div> -->

<%  end %>






